#!/usr/bin/perl -w
use strict;
use FindBin;

my $TOP;  # top-level directory

BEGIN
	{
	# Find our top level.
	$TOP = $FindBin::RealBin;
	$TOP =~ /^(.*)$/;  # defeat taint checking if enabled
	$TOP = $1;         # that's our bin directory
	$TOP = "$TOP/../..";  # go two levels up
	};

use lib "$TOP/code";

use Loom::Diceware;
use Loom::Random;

my $num_words;

main();

sub main
	{
	check_usage();

	my $random = Loom::Random->new;
	my $diceware = Loom::Diceware->new($random);

	my $passphrase = $diceware->get($num_words);

	print "$passphrase\n";
	}

sub check_usage
	{
	my $usage_error = 0;

	my $argc = scalar(@ARGV);

	if ($argc == 1)
		{
		$num_words = shift @ARGV;
		if ($num_words !~ /^\d+$/)
			{
			$usage_error = 1;
			}
		}
	else
		{
		$usage_error = 1;
		}

	return if !$usage_error;

	my $prog = $0;
	$prog =~ s#^.*/##;

print STDERR <<EOM;
Usage : $prog count
EOM
exit 2;
	}

__END__

