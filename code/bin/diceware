#!/usr/bin/perl -w
use strict;
use FindBin;

my $TOP;  # top-level directory

BEGIN
	{
	# Find our top level.
	$TOP = $FindBin::RealBin;
	$TOP =~ /^(.*)$/;  # defeat taint checking if enabled
	$TOP = $1;         # that's our bin directory
	$TOP = "$TOP/../..";  # go two levels up
	};

use lib "$TOP/code";

use Loom::Diceware;
use Loom::Random;

main->new->run(@ARGV);

sub new
	{
	my $class = shift;
	my $s = bless({},$class);
	return $s;
	}

sub run
	{
	my $s = shift;

	$s->check_usage(@_);

	my $random = Loom::Random->new;
	$s->{diceware} = Loom::Diceware->new($random);

	my $passphrase = $s->{diceware}->get($s->{count});

	print "$passphrase\n";
	}

sub check_usage
	{
	my $s = shift;
	my @args = @_;

	my $usage_error = 0;

	my $argc = scalar(@args);

	if ($argc == 1)
		{
		$s->{count} = shift @args;
		if ($s->{count} !~ /^\d+$/)
			{
			$usage_error = 1;
			}
		}
	else
		{
		$usage_error = 1;
		}

	return if !$usage_error;

	my $prog = $0;
	$prog =~ s#^.*/##;

print STDERR <<EOM;
Usage : $prog count
EOM
exit 2;
	}

__END__

